<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".identifier.scan_fragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PocketScanner"
        android:fontFamily="@font/ubunto_bold"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:layout_marginTop="15dp"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:background="@drawable/search"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Are you ready to use PocketScanner? Well start PocketScanner now!"
        android:fontFamily="@font/ubunto_bold"
        android:textColor="@color/black"
        android:layout_marginHorizontal="15dp"
        android:textSize="17sp"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="(Note: PocketScanner is still at BETA, some objects are still under the process of training datasets in regards to the other components and peripherals of a PC."
        android:fontFamily="@font/ubuntu_regular"
        android:textColor="@color/green"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:gravity="center"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnScan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PocketScanner Start"
        android:fontFamily="@font/ubuntu_regular"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:padding="10dp"
        app:backgroundTint="@color/brown"
        app:cornerRadius="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="25dp"/>

