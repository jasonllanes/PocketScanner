<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".home.home_fragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to PocketScanner!"
        android:fontFamily="@font/ubunto_bold"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:layout_marginTop="15dp"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:background="@drawable/search"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Are you having some trouble identfying pc parts and the name of such peripherals thata PC have?"
        android:fontFamily="@font/ubuntu_regular"
        android:textColor="@color/black"
        android:layout_marginHorizontal="15dp"
        android:textSize="17sp"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PocketScanner is here for you!"
        android:fontFamily="@font/ubunto_bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="(Try tapping the Scan tab)"
        android:fontFamily="@font/ubuntu_regular"
        android:textColor="@color/black"
        android:textSize="15sp"

        android:gravity="center"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginVertical="15dp"
        android:background="@color/black"
        android:layout_marginHorizontal="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Latest Gadget News!"
        android:fontFamily="@font/ubunto_bold"
        android:textColor="@color/red"
        android:textSize="25sp"
        android:layout_marginTop="15dp"
        android:gravity="center"/>


    <ListView
        android:id="@+id/lvContributions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="90dp"/>

</LinearLayout>